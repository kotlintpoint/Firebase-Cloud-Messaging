<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preference.MyPreferenceActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Message"/>
    <Button
        android:id="@+id/btnWritePreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Preference"
        android:onClick="writePreference"/>
    <Button
        android:id="@+id/btnReadPreference"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Preference"
        android:onClick="readPreference"/>
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:onClick="settings"/>
    <Button
        android:id="@+id/btnReadSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Settings"
        android:onClick="readSettings"/>
</LinearLayout>